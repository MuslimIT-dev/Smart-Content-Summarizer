{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "Пример расширения",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }